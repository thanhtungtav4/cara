include ../_mixins/_all

block vars
  -title        = ''
  -description  = ''
  -keywords     = ''
  -pageID       = ''
  -path         = ''
  -ispage       = ''
doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title=title
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap' rel='stylesheet')
    link(rel='stylesheet' href=path+'assets/css/style.css')
    if(ispage = 'cart')
      link(rel='stylesheet' href='https://huongluafood.com/wp-content/plugins/woocommerce/assets/css/woocommerce-layout.css?ver=6.4.1')
      link(rel='stylesheet' href='https://huongluafood.com/wp-content/plugins/woocommerce/assets/css/woocommerce-smallscreen.css?ver=6.4.1')
      link(rel='stylesheet' href='https://huongluafood.com/wp-content/plugins/woocommerce/assets/css/woocommerce.css?ver=6.4.1')
    block before_page
  body
    .container
      include ../_modules/header
      main.l-main
        block container
      include ../_modules/footer
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js")
    script(src=path+"assets/js/common.js")
    block after_page
